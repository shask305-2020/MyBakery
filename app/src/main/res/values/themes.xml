<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения. -->
    <style name="Theme.MyBakery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Первичный фирменный цвет. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Вторичный фирменный цвет. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Цвет статус-бара. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Настройте свою тему здесь. -->
    </style>

    <style name="Theme.MyBakery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyBakery.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyBakery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>